<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar1"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:layout_gravity="center"
                android:id="@+id/toolbar_title"
                android:typeface="monospace"
                android:textSize="40dp"
                android:textColor="@color/colorWhite"
                />
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/searchListLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/topBar">

            <Button
                android:id="@+id/facebookButton"
                android:background="@drawable/social_media_buttons"
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:backgroundTint="@color/facebookBlue"
                android:text="Facebook"
                android:textColor="@color/colorWhite"/>
            <Button
                android:id="@+id/twitterButton"
                android:background="@drawable/social_media_buttons"
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:backgroundTint="@color/twitterBlue"
                android:text="Twitter"
                android:layout_below="@id/facebookButton"
                android:textColor="@color/colorWhite"/>
            <Button
                android:id="@+id/googleButton"
                android:background="@drawable/social_media_buttons"
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:backgroundTint="@color/googleRed"
                android:text="Google+"
                android:layout_below="@id/twitterButton"
                android:textColor="@color/colorWhite"/>
            <Button
                android:id="@+id/whatsappButton"
                android:background="@drawable/social_media_buttons"
                android:layout_width="match_parent"
                android:layout_height="103dp"
                android:backgroundTint="@color/whatsupGreen"
                android:text="WhatsApp"
                android:layout_below="@id/googleButton"
                android:textColor="@color/colorWhite"/>
            <Button
                android:id="@+id/instagramButton"
                android:background="@drawable/social_media_buttons"
                android:layout_width="match_parent"
                android:layout_height="103dp"
                android:backgroundTint="@color/instagramBlue"
                android:text="Instagram"
                android:layout_below="@id/whatsappButton"
                android:textColor="@color/colorWhite"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
